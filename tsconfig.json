{
  "compilerOptions": {
    "esModuleInterop": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES2020",
    "experimentalDecorators": true,
    "declaration": true,
    "noResolve": false,
    "moduleResolution": "node",
    "outDir": ".tmp",
    "allowJs": true,
  },
  "exclude": ["node_modules", ".tmp", "jest.config.js"]
}
