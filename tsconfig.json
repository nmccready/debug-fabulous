{
  "compilerOptions": {
    "esModuleInterop": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "ES2020",
    "experimentalDecorators": true,
    "declaration": true,
    "noResolve": false,
    "moduleResolution": "node",
    "outDir": "lib",
    "allowJs": true,
  },
  "include": ["src/**/*"]
}
